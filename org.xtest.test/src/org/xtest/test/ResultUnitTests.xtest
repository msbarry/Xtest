xtest xtestInSuiteFail {
    val suite = new XTestSuiteResult(null)
    val test = suite.subCase("test", null)
    test.fail()
    assertEquals(XTestState::FAIL, test.getState())
    assertEquals(XTestState::FAIL, suite.getState())
